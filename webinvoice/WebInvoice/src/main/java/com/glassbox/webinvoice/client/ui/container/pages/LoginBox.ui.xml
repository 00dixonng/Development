<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        input, button, label {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        font-size: 15px;
        font-weight: 300;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        }

        input[type=text], input[type=password] {
        padding: 0 10px;
        width: 300px;
        height: 40px;
        color: #bbb;
        text-shadow: 1px 1px 1px black;
        background: rgba(0, 0, 0, 0.16);
        border: 0;
        border-radius: 5px;
        -webkit-box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.3), 0 1px rgba(255, 255, 255, 0.06);
        box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.3), 0 1px rgba(255, 255, 255, 0.06);
        }
        
        input[type=text]:focus, input[type=password]:focus {
        color: white;
        background: rgba(0, 0, 0, 0.1);
        outline: 0;
        }   
        
        .forgot-password {
        padding-left: 100px;
        font-size: 13px;
        font-weight: 100;
        letter-spacing: 1px;
        }     
    </ui:style>
    <g:HTMLPanel>
        <form style="position: relative; margin: 80px auto; width: 400px; padding-right: 32px; font-weight: 300;
        color: #a8a7a8; text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.8);">
            <p>
                <label for="login">Login:</label>
                <input type="text" name="login" id="login" value="login"></input>
            </p>
            <p>
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" value="4815162342"></input>
            </p>
            <p class="login-submit">
                <button type="submit" style="position: relative;
  z-index: 2;
  width: 48px;
  height: 48px;
  padding: 0 0 48px;
  text-indent: 120%;
  white-space: nowrap;
  overflow: hidden;
  background: none;
  border: 0;
  border-radius: 24px;
  cursor: pointer;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.2), 0 1px rgba(255, 255, 255, 0.1);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.2), 0 1px rgba(255, 255, 255, 0.1);">Login</button>
            </p>

            <p class="forgot-password">
                <a href="index.html">Forgot your password?</a>
            </p>
        </form>
    </g:HTMLPanel>
</ui:UiBinder>