<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>
        .cellTable {
        border-bottom: 1px solid #ccc;
        text-align: left;
        margin-bottom: 4px;
        }
    </ui:style>
    <g:HTMLPanel>
        <p>This is the clients page</p>
        <g:SplitLayoutPanel>
            <g:west size="200">
                <g:VerticalPanel>
                    <g:Button></g:Button>
                </g:VerticalPanel>
            </g:west>
            <g:center>
                <g:VerticalPanel>
                    <g:HTMLPanel>
                        <table cellspacing='0' cellpadding='0' style='width:100%;'>
                            <tr>
                                <td
                                    valign='top'>
                                    <c:CellTable
                                        addStyleNames='{style.cellTable}'
                                        pageSize='15'
                                        ui:field='cellTable' />
                                </td>
                            </tr>
                            <tr>
                                <td
                                    align='center'>
                                    <c:SimplePager
                                        ui:field='pager' />
                                </td>
                            </tr>
                        </table>
                    </g:HTMLPanel>
                </g:VerticalPanel>
            </g:center>
        </g:SplitLayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>